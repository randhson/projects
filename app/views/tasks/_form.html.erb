<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="form-title">
      <%= form.label 'Titulo', class:'col-sm-2' %>
      <%= form.text_field :title, class: 'col-sm-9 title-form' %>
    </div>
    <div class="form-dates">
      <%= form.label 'Data Inicio' %>
      <%= form.date_field :dt_inicio %>

      <%= form.label 'Data Final' %>
      <%= form.date_field :dt_final %>
      
      <div class="col-sm-11 box-01">
        <div class="col-sm-2">
          <%= form.label 'Finalizada' %>
          <%= form.check_box :finish %>
        </div>
        <div class="col-sm-8 box-2">
          <%= form.label 'Projeto' %>
          <%= form.select :project_id, @projetos.collect {|projeto| [projeto.title, projeto.id]} %>
        </div>
      </div>
  
    </div>
  </div>
   <div class="actions">
      <%= form.submit value: 'Enviar', class: 'btn btn-primary' %>
    </div>


<% end %>
